#!/bin/bash
clear
#--------@RESURRECTION ssh-----------#
source ShellBot.sh
touch lista
[[ -z $1 ]] && {
    clear && echo "INFORME O TOKEN DO BOT" && return 0
}
[[ ! -e RESET ]] && touch RESET
api_bot=$0
ShellBot.init --token "$api_bot" --monitor --flush
ShellBot.username

# - Funcao menu
